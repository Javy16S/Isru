<section id="productos" class="py-20 w-full max-w-[1920px] mx-auto px-4 md:px-8">
  <div class="flex flex-col md:flex-row justify-between items-end mb-10 gap-6">
    <h2 class="font-cinzel text-3xl md:text-4xl font-bold text-gray-900" data-i18n="products.title">Productos destacados</h2>
    
    <!-- Controls -->
    <div class="product-controls flex flex-wrap gap-3 items-center w-full md:w-auto bg-white p-2 rounded-xl border border-gray-100 shadow-sm">
      <div class="relative flex-grow md:flex-grow-0">
         <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" /></svg>
         </span>
         <input id="searchInput" type="search" placeholder="Buscar..." class="pl-10 pr-4 py-2 w-full md:w-64 bg-gray-50 border-0 rounded-lg focus:ring-2 focus:ring-blue-100 transition-all text-sm" aria-label="Buscar productos">
      </div>

      <select id="categoryFilter" class="bg-gray-50 border-0 text-sm rounded-lg focus:ring-2 focus:ring-blue-100 py-2 px-3 text-gray-700 cursor-pointer hover:bg-gray-100 transition" aria-label="Filtrar por categorÃ­a">
        <option value="all" data-i18n="cat.all">Todas</option>
        <option value="cartera" data-i18n="cat.cartera">Carteras</option>
        <option value="organizador" data-i18n="cat.organizador">Organizadores</option>
        <option value="monedero" data-i18n="cat.monedero">Monederos</option>
      </select>

      <select id="colorFilter" class="bg-gray-50 border-0 text-sm rounded-lg focus:ring-2 focus:ring-blue-100 py-2 px-3 text-gray-700 cursor-pointer hover:bg-gray-100 transition" aria-label="Filtrar por color">
        <option value="all" data-i18n="col.all">Color</option>
        <option value="gold" data-i18n="col.gold">Dorado</option>
        <option value="blue" data-i18n="col.blue">Azul</option>
        <option value="white" data-i18n="col.white">Blanco</option>
      </select>
    </div>
  </div>

  <div id="productGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Rendered via JS -->
    <div class="col-span-full py-12 text-center text-gray-400">
      <div class="animate-pulse">Cargando productos...</div>
    </div>
  </div>
</section>
