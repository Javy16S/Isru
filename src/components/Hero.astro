<section class="py-16 md:py-24 bg-gradient-to-b from-white to-blue-50/30">
  <div class="w-full max-w-[1920px] mx-auto px-4 md:px-8 grid md:grid-cols-2 gap-12 items-center">
    <!-- Text content wrapper for better alignment on wide screens -->
    <div class="space-y-6 animate-fade-in-up pl-4 md:pl-12 lg:pl-20">
      <h1 class="font-cinzel text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 leading-tight" data-i18n="hero.title">
        Accesorios elegantes para organizar tu día
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 max-w-xl leading-relaxed" data-i18n="hero.subtitle">
        Diseños minimalistas en tonos dorado y azul para llevar todo lo esencial con estilo.
      </p>
      <div class="pt-6">
        <a class="inline-block bg-gray-900 text-white font-semibold py-4 px-10 rounded-full shadow-lg hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 text-lg" 
           id="btnViewCollection" 
           href="#productos" 
           data-i18n="hero.cta">
          Ver colección
        </a>
      </div>
    </div>
    
    <div class="relative group w-full h-full flex items-center justify-center p-4" aria-hidden="true">
      <div class="absolute inset-4 bg-gradient-to-r from-gold/20 to-blue/20 rounded-[2rem] blur-2xl opacity-60 group-hover:opacity-100 transition duration-500"></div>
      <picture class="relative w-full max-w-2xl transform transition duration-500 hover:scale-[1.01]">
        <source srcset={`${import.meta.env.BASE_URL}images/imagen_muestra.avif`} type="image/avif">
        <img src={`${import.meta.env.BASE_URL}images/imagen_muestra.avif`} 
             alt="Isru Colección" 
             width="720" 
             height="480" 
             loading="eager" 
             fetchpriority="high"
             class="w-full h-auto rounded-[2rem] shadow-2xl" />
      </picture>
    </div>
  </div>
</section>
