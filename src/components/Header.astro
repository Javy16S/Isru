---
---
<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100 transition-all duration-300">
  <div class="w-full max-w-[1920px] mx-auto px-4 md:px-12 h-20 flex items-center justify-between">
    <a class="block w-24 md:w-28 opacity-90 hover:opacity-100 transition-opacity" href={`${import.meta.env.BASE_URL}/`}>
      <img src={`${import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0,-1) : import.meta.env.BASE_URL}/images/ISRU.svg`} alt="ISRU" class="w-full h-auto" />
    </a>
    
    <nav class="hidden md:flex gap-12 items-center" id="mainNav">
      <a class="text-xs uppercase tracking-[0.15em] text-gray-600 hover:text-black transition-colors" data-i18n="nav.products" href={`${import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0,-1) : import.meta.env.BASE_URL}/#productos`}>Shop</a>
      <a class="text-xs uppercase tracking-[0.15em] text-gray-600 hover:text-black transition-colors" data-i18n="nav.about" href={`${import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0,-1) : import.meta.env.BASE_URL}/#about`}>About</a>
      <a class="text-xs uppercase tracking-[0.15em] text-gray-600 hover:text-black transition-colors" data-i18n="nav.contact" href={`${import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0,-1) : import.meta.env.BASE_URL}/#contacto`}>Contact</a>
    </nav>

    <div class="flex items-center gap-6">
      <div class="flex items-center gap-2 relative group" id="lang-container">
        <script>
           // Inline simple script for language dropdown
           document.addEventListener('DOMContentLoaded', () => {
             const trigger = document.getElementById('lang-trigger');
             const options = document.getElementById('lang-options');
             const select = document.getElementById('langSelect');
             const label = document.getElementById('lang-label');
             
             // Initialize from localStorage
             const saved = localStorage.getItem('isru_locale');
             if (saved && label) {
                 label.textContent = saved.toUpperCase();
                 if (select) select.value = saved;
             }

             trigger?.addEventListener('click', (e) => {
               e.stopPropagation();
               options?.classList.toggle('hidden');
             });
             
             options?.querySelectorAll('button').forEach(btn => {
               btn.addEventListener('click', () => {
                  const val = btn.dataset.value;
                  if (label) label.textContent = val.toUpperCase();
                  options.classList.add('hidden');
                  if (select) {
                     select.value = val;
                     select.dispatchEvent(new Event('change'));
                  }
               });
             });
             
             document.addEventListener('click', (e) => {
               if (!trigger?.contains(e.target)) options?.classList.add('hidden');
             });
           });
        </script>
        
        <button id="lang-trigger" class="flex items-center gap-1 text-xs uppercase tracking-widest text-gray-500 hover:text-black transition cursor-pointer">
           <span id="lang-label">ES</span>
           <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 9l-7 7-7-7"></path></svg>
        </button>
        
        <div id="lang-options" class="hidden absolute top-full right-0 mt-2 w-24 bg-white shadow-lg border border-gray-100 py-1 z-50">
           <button class="block w-full text-left px-4 py-2 text-xs uppercase tracking-widest text-gray-500 hover:bg-gray-50 hover:text-black" data-value="es">Español</button>
           <button class="block w-full text-left px-4 py-2 text-xs uppercase tracking-widest text-gray-500 hover:bg-gray-50 hover:text-black" data-value="en">English</button>
           <button class="block w-full text-left px-4 py-2 text-xs uppercase tracking-widest text-gray-500 hover:bg-gray-50 hover:text-black" data-value="fr">Français</button>
        </div>
        
        <select id="langSelect" class="hidden">
          <option value="es">ES</option>
          <option value="en">EN</option>
          <option value="fr">FR</option>
        </select>
      </div>

      <button id="cart-trigger" class="text-gray-900 hover:text-gray-600 transition-colors relative" aria-label="Cart">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
        <span id="cart-count" class="absolute -top-1 -right-2 bg-gray-900 text-white text-[9px] w-4 h-4 flex items-center justify-center rounded-full opacity-0 transition-opacity">0</span>
      </button>

      <button class="md:hidden text-2xl text-gray-900 focus:outline-none font-light" id="navToggle" aria-label="Abrir menú">
         <span class="sr-only">Menu</span>
         <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobileMenu" class="hidden md:hidden absolute top-20 left-0 w-full bg-white border-b border-gray-100 py-8 px-8 flex-col gap-6 animate-fade-in">
    <a class="block text-sm uppercase tracking-widest text-gray-900" href={`${import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0,-1) : import.meta.env.BASE_URL}/#productos`}>Shop</a>
    <a class="block text-sm uppercase tracking-widest text-gray-900" href={`${import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0,-1) : import.meta.env.BASE_URL}/#about`}>About</a>
    <a class="block text-sm uppercase tracking-widest text-gray-900" href={`${import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0,-1) : import.meta.env.BASE_URL}/#contacto`}>Contact</a>
  </div>
</header>

<script>
  import { toggleCart, cartItems } from '../stores/cart';

  const navToggle = document.getElementById('navToggle');
  const mobileMenu = document.getElementById('mobileMenu');
  
  // Cart Logic
  const cartTrigger = document.getElementById('cart-trigger');
  const cartCount = document.getElementById('cart-count');

  cartTrigger?.addEventListener('click', (e) => {
    e.preventDefault();
    toggleCart(true);
  });

  cartItems.subscribe(items => {
      const count = Object.values(items).reduce((acc, item) => acc + item.quantity, 0);
      if (cartCount) {
          cartCount.textContent = count.toString();
          cartCount.classList.toggle('opacity-0', count === 0);
      }
  });

  navToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    mobileMenu?.classList.toggle('flex');
    const isExpanded = mobileMenu?.classList.contains('flex');
    navToggle.setAttribute('aria-expanded', String(isExpanded));
  });
</script>
